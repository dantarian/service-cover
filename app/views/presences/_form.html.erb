<%= form_with(model: presence, local: true) do |form| %>
  <% if presence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(presence.errors.count, "error") %> prohibited this presence from being saved:</h2>

      <ul>
        <% presence.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :engineer_id %>
    <%= form.collection_select :engineer_id, Engineer.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :working_date_id %>
    <%= form.collection_select :working_date_id, WorkingDate.all, :id, :working_date %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status do %>
      <%= options_for_select(Presence.statuses.map { |k,v| [v,k] }) %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
